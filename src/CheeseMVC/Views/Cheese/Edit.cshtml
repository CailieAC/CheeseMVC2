
@model CheeseMVC.ViewModels.EditCheeseViewModel

<h1>Edit Cheese @Model.Name (id=@Model.cheeseId)</h1>

<form asp-controller="Cheese" asp-action="Add" method="post">

    <div asp-validation-summary="All"></div>

    <input type="hidden" value="@Model.cheeseId" name="id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" value="@Model.Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" value="@Model.Description"/>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Model.CheeseTypes" value="@Model.Type"></select>
    </div>


    <input type="submit" value="Add Cheese" />

</form>

